{
    "manifest_version": 3,
    "name": "LinkedIn Note Customizer",
    "version": "1.0",
    "description": "Customize 'Add a note' on LinkedIn",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  